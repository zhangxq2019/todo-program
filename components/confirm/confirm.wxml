<!--components/confirm/confirm.wxml-->
<view class="confirm-container" wx:if="{{visible}}">
<view class="confirm" >
<textarea class="textarea" placeholder="{{placeholder}}" auto-focus="true" value="{{value}}" bindinput="watchValue"></textarea>
<view class="action">
<view hover-class="active" class="sure" bindtap="confirm">确定</view>
<view hover-class="active" class="cancel" bindtap="cancel">取消</view>
</view>
</view>
</view>
