.myhome-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ccc;
}
.myhome-container .header {
  display: flex;
  width: 100%;
  font-size: 22rpx;
  padding: 10rpx 40rpx;
  margin-bottom: 20rpx;
  color:  #00a60b;
  background: #fff;
}

.myhome-container .header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
}
.myhome-container .header .info {
  font-size: 36rpx;
  padding: 20rpx 10rpx;
  /* background: #0f0; */
}
.myhome-container .header .info .name {
  font-size: 32rpx;
  padding-bottom: 22rpx;
  /* background: #ff0; */
}
.myhome-container .tabs {
  width: 100%;
  display: flex;
  padding: 10rpx 0rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #333;
  background: #fff;
}
.myhome-container .tabs > view {
  width: 50%;
  height: 100%;
  text-align: center;
  background: #fff;
}
.myhome-container .tabs > view.active-tab{
  opacity: 0.5;
}
.myhome-container .active {
  display: inline-block;
  border-bottom: 10rpx solid #00a60b;
}
.myhome-container .list {
  flex: 1;
  width: 100%;
  padding: 0 20rpx ;
  overflow: scroll;
  background: #ccc;
}
.myhome-container .list .item {
  padding: 10rpx 28rpx 35rpx 40rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #333;
  border-radius: 10rpx;
  box-shadow: 1rpx 2rpx 6rpx 4rpx rgba(0,0,0,0.1);
  background: #fff;
  /* background: #0f0; */
}
.myhome-container .list .item .time {
  margin-bottom: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #00a60b;
}
.myhome-container .list .item .content {
  display: flex;
  padding-bottom: 24rpx;
  font-size: 24rpx;
}
.myhome-container .list .content .text {
  padding-right: 25rpx;
}
.myhome-container .list .content .detail {
  flex: 1;
  flex-wrap: wrap;
}