<view class="myhome-container">
	<view class="header">
		<view class="avatar">
			<open-data type="userAvatarUrl"></open-data>
		</view>
		<view class="info">
			<open-data class="name" type="userNickName"></open-data>
		</view>
	</view>
	<view class="tabs">
		<view data-name="task" class="{{tab === 'task' && 'active'}}" hover-class="active-tab" bindtap="changeTab">完成的任务</view>
		<view data-name="history" class="{{tab === 'history' && 'active'}}" hover-class="active-tab" bindtap="changeTab">番茄历史</view>
	</view>
	<view class="list" scroll-y="true">
		<view class="item" wx:for="{{lists}}" wx:for-index="key" wx:key="index">
			<view class="time">{{key}}</view>
			<view class="content"  wx:for="{{lists[key]}}" wx:for-index="index" wx:key="index">
				<text class="text">{{item.time}}</text>
				<view class="detail">{{item.text}}</view>
			</view>
		</view>
	</view>
</view>